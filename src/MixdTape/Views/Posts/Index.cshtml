@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<MixdTape.Models.Post>
<div class="dock">
    <h2 class="title">Mixd Tape</h2>
</div>
@if (Model.Any())
{
    @foreach (var listPost in Model)
    {

        <div class="container">
            <div class="skinny column lefty">
                <div class="menu">
                    <nav>
                        <script class="pitchfork" type="text/javascript" src="http://output25.rssinclude.com/output?type=js&amp;id=1148492&amp;hash=aaca347b484c2164752f31d0d749fd7a"></script>
                    </nav>
                </div>
            </div>

            <div class="fat column righty">

                <div class="content">
                    <div class="header-image">
                        <img src="@Html.DisplayFor(modelProduct => listPost.ImagePath)" />
                    </div>
                    <h2>@Html.DisplayFor(modelPost => listPost.Title)</h2>
                    <p>@Html.DisplayFor(modelPost => listPost.Description)</p>
 
                </div>
            </div>

        </div>
            @if (User.Identity.IsAuthenticated)
            {

                <p>@Html.ActionLink("Edit", "Edit", new { id = listPost.Id })</p>

            }
    }
}



@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Create new", "Create")</p>

}
