@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MixdTape.ViewModels

@model RegisterViewModel


<div class="loginbody">


</div>
<div class="login">
    <h1 class="loginTitle">Mixd Tape</h1>
    <h4 class="secondTitle">Please register for a new account</h4>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)

        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName)

        <p> Passwords requires at least six characters, a capital letter, a digit, and a special character</p>

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)

        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword)

        <input type="submit" value="Register" class="btn"/>
    }
</div>