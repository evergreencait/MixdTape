@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>

        @Html.ActionLink("View all Searched Artists", "GetTrack")
        <br />
        @Html.ActionLink("Search for a new artist based on track", "SearchTrack")
        <br />
        <hr />
        @Html.ActionLink("ARTIST LIST (REMOVE ME)", "GetArtists", "Artists")

        <br />
        
        }
        else
        {
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}

@if (User.Identity.IsAuthenticated)
{

    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
}
