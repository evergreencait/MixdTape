@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<MixdTape.Models.Artist>
<div class="dock">
    <h2 class="title">Favorite Artists</h2>
    <p>@Html.ActionLink("Add artists", "Create")</p>
</div>

@{
    ViewBag.Title = "Home Page";
    int counter = 0;
}

<div class="row">
@if (Model.Any())
{
    @foreach (var article in Model)
    {
        if (counter != 0 && counter % 3 == 0)
        {
            @:</div>
        @:<div class="row">
    }

        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@article.ImgUrl" data-holder-rendered="true" style="height: 400px; width: 100%; display: block;">
                <div class="caption">
                    <h3 id="thumbnail-label">@article.Name</h3>
                    <p>@Html.ActionLink("Edit", "Edit", new { id = article.ArtistId })</p>
                </div>
            </div>
        </div>

        counter++;
    }
}
</div>

